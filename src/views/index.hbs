  <div class="container video-youtube" id="form-signin">
    <iframe width="100%" height="315" src="https://www.youtube.com/embed/okdGG4syTKM" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
  </div>
  <div class="container" >
    <div class="col-md-8 ">
      <form class="form-horizontal access" role="form" action="/signin" method="POST">
        <div class="form-group" >
            <label class="col-sm-3 control-label" for="user">Usuario</label>
            <div class="col-sm-9">
              <input class="form-control" id="user" name="username" placeholder="Nombre de usuario" type="text">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" for="password">Contraseña:</label>
            <div class="col-sm-9">
              <input class="form-control" id="password" name="password" placeholder="Contraseña" type="password">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
              <button class="btn btn-primary pull-right" type="submit">Ingresar</button>
            </div>
            <div class="text-center">
               <button type="button" class="btn btn-link" data-toggle="modal" data-target="#restablecerCuenta" id="solicitar">
                  Recuperar contraseña
                </button>

              <!-- Mensajes de error y éxito -->
              {{#if message}}
                 <div class="alert alert-warning alert-dismissible" style="margin-top: 20px;">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span></button>
                     <p class="error-message">{{message}}</p>
              </div>
              {{/if}}

              {{#if success}}
              <div class="alert alert-success alert-dismissible" style="margin-top: 25px;">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span></button>
                     <p class="success-message">{{success}}</p>
                     <p>La contraseña se envió a la dirección de correo electrónico registrada.</p>
              </div>
              {{/if}}
                <!-- views/email_form.hbs -->
            </div>    
        </div>
      </form>   
          {{>recover}}
      <form class="form-horizontal access" role="form">
        <div class="form-group">
            <label class="col-sm-3 control-label" for="cct">CCT</label>
            <div class="col-sm-9">
                <input class="form-control" id="cct" placeholder="Buscar por CCT" type="text">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" for="subsistema">Subsistema</label>
            <div class="col-sm-9">
                <input class="form-control" id="subsistema" placeholder="Buscar por Subsistema" type="text">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                <button class="btn btn-primary pull-right" type="submit">Buscar</button>
            </div>
            </div>
      </form>
    </div>
    <div class="col-md-4">
        <img class="img-responsive img-educacion" src="/uploads/img/perfil_sep.jpg" alt="sep">
    </div>
